<div class="dashboard-container">
  <%= render partial: 'shared/sidebar_menu' %>
  <div class="content">
    <%= render partial: 'shared/header' %>
    
    <div class="reports-container">
      <h1 class="reports-title">Reports Dashboard</h1>
      
      <!-- Summary Cards -->
      <div class="stats-grid">
        <div class="stat-card stat-primary">
          <div class="stat-icon"><i class="fa fa-users"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @total_voters %></span>
            <span class="stat-label">Total Registered</span>
          </div>
        </div>
        
        <div class="stat-card stat-success">
          <div class="stat-icon"><i class="fa fa-print"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @total_printed %></span>
            <span class="stat-label">Tokens Printed</span>
          </div>
        </div>
        
        <div class="stat-card stat-warning">
          <div class="stat-icon"><i class="fa fa-clock-o"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @total_pending %></span>
            <span class="stat-label">Pending</span>
          </div>
        </div>
        
        <div class="stat-card stat-danger">
          <div class="stat-icon"><i class="fa fa-lock"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @total_locked %></span>
            <span class="stat-label">Locked Records</span>
          </div>
        </div>
      </div>

      <!-- Second Row Stats -->
      <div class="stats-grid stats-grid-3">
        <div class="stat-card stat-blue">
          <div class="stat-icon"><i class="fa fa-male"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @male_count %></span>
            <span class="stat-label">Male Registered</span>
          </div>
        </div>
        
        <div class="stat-card stat-pink">
          <div class="stat-icon"><i class="fa fa-female"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @female_count %></span>
            <span class="stat-label">Female Registered</span>
          </div>
        </div>
        
        <div class="stat-card stat-purple">
          <div class="stat-icon"><i class="fa fa-user-plus"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @total_guest_entries %></span>
            <span class="stat-label">Guest Entries</span>
          </div>
        </div>
      </div>

      <!-- Third Row Stats - Voters with Execution No -->
      <div class="stats-grid stats-grid-2">
        <div class="stat-card stat-blue">
          <div class="stat-icon"><i class="fa fa-male"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @male_voters_with_exec %></span>
            <span class="stat-label">Male Voters</span>
          </div>
        </div>
        
        <div class="stat-card stat-pink">
          <div class="stat-icon"><i class="fa fa-female"></i></div>
          <div class="stat-info">
            <span class="stat-value"><%= @female_voters_with_exec %></span>
            <span class="stat-label">Female Voters</span>
          </div>
        </div>
      </div>

      <!-- Today's Summary -->
      <div class="today-summary">
        <h3><i class="fa fa-calendar"></i> Today's Activity</h3>
        <p style="font-size: 12px; color: #7f8c8d; margin-bottom: 15px;">
          <i class="fa fa-info-circle"></i> All reports include guest entries. Guests are marked with a "Guest" badge in detailed reports.
        </p>
        <div class="today-stats">
          <div class="today-stat">
            <span class="today-value"><%= @today_printed %></span>
            <span class="today-label">Tokens Printed Today</span>
          </div>
          <div class="today-stat">
            <span class="today-value">#<%= @latest_token %></span>
            <span class="today-label">Latest Token Number</span>
          </div>
        </div>
      </div>

      <!-- Report Links -->
      <div class="report-links">
        <h3><i class="fa fa-file-text"></i> Detailed Reports</h3>
        <div class="report-grid">
          <%= link_to attendance_reports_path, class: "report-link-card" do %>
            <i class="fa fa-check-square-o"></i>
            <span>Attendance Report</span>
            <small>View who has collected tokens</small>
          <% end %>
          
          <%= link_to gender_distribution_reports_path, class: "report-link-card" do %>
            <i class="fa fa-pie-chart"></i>
            <span>Gender Distribution</span>
            <small>Male vs Female breakdown</small>
          <% end %>
          
          <%= link_to qabeela_stats_reports_path, class: "report-link-card" do %>
            <i class="fa fa-sitemap"></i>
            <span>Qabeela Statistics</span>
            <small>Distribution by Qabeela</small>
          <% end %>
          
          <%= link_to urfiat_stats_reports_path, class: "report-link-card" do %>
            <i class="fa fa-building"></i>
            <span>Urfiat Statistics</span>
            <small>Distribution by Urfiat</small>
          <% end %>
          
          <%= link_to guest_entries_reports_path, class: "report-link-card" do %>
            <i class="fa fa-user-plus"></i>
            <span>Guest Entries</span>
            <small>All walk-in registrations</small>
          <% end %>
          
          <%= link_to daily_report_reports_path, class: "report-link-card" do %>
            <i class="fa fa-calendar-check-o"></i>
            <span>Daily Report</span>
            <small>Day-wise token distribution</small>
          <% end %>
          
          <%= link_to welfare_status_reports_path, class: "report-link-card" do %>
            <i class="fa fa-heart"></i>
            <span>Welfare Fund Status</span>
            <small>W/F Upto distribution</small>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

